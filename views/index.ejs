<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PDF Uploader</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <form id="pdfForm" enctype="multipart/form-data">
        <label for="pdfName">PDF Name:</label>
        <input type="text" id="pdfName" name="pdfName" required>
        
        <label for="pdfFile">Choose PDF:</label>
        <input type="file" id="pdfFile" name="pdfFile" accept=".pdf" required>

        <button type="button" onclick="uploadPDF()">Upload PDF</button>
    </form>

    
    <script>

function uploadPDF() {
    const pdfName = document.getElementById('pdfName').value;
    const pdfFile = document.getElementById('pdfFile').files[0];

    if (!pdfName || !pdfFile) {
        alert('Please provide both PDF name and file.');
        return;
    }

    const formData = new FormData();
    formData.append('pdfName', pdfName);
    formData.append('pdfFile', pdfFile);

    fetch('/upload', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        alert(data.message);
    })
    .catch(error => {
        console.error('Error:', error);
    });
}


    </script>
</body>
</html>




